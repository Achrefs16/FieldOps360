// FieldOps360 â€” Platform Database Schema
// This is the shared database for Super Admin operations (NOT tenant data)
// Contains: tenants, platform_admins, plans

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/platform"
}

datasource db {
  provider = "postgresql"
  url      = env("PLATFORM_DATABASE_URL")
}

// --- Subscription Plans ---
model Plan {
  id          String   @id @default(uuid())
  name        String   @unique // Starter, Professional, Enterprise
  maxUsers    Int      @map("max_users")
  maxProjects Int      @map("max_projects")
  storageGb   Int      @map("storage_gb")
  hasGps      Boolean  @default(false) @map("has_gps")
  price       Decimal  @db.Decimal(10, 2)
  tenants     Tenant[]
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("plans")
}

// --- Tenants (Client Companies) ---
model Tenant {
  id           String       @id @default(uuid())
  name         String       // "SARL BTP Horizon"
  subdomain    String       @unique // "btphorizon"
  sector       String       // BTP, ELECTRICAL, PUBLIC_WORKS
  status       TenantStatus @default(ACTIVE)
  planId       String       @map("plan_id")
  plan         Plan         @relation(fields: [planId], references: [id])
  contactName  String       @map("contact_name")
  contactEmail String       @map("contact_email")
  contactPhone String?      @map("contact_phone")
  dbName       String       @map("db_name") // "fieldops_tenant_btphorizon"
  usersCount   Int          @default(0) @map("users_count")
  storageUsed  Decimal      @default(0) @db.Decimal(10, 2) @map("storage_used_gb")
  createdAt    DateTime     @default(now()) @map("created_at")
  updatedAt    DateTime     @updatedAt @map("updated_at")
  deletedAt    DateTime?    @map("deleted_at")

  @@map("tenants")
}

enum TenantStatus {
  ACTIVE
  SUSPENDED
  DELETED
}

// --- Platform Admins (Super Admins) ---
model PlatformAdmin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // bcrypt hash
  firstName String   @map("first_name")
  lastName  String   @map("last_name")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("platform_admins")
}
